    <script>
        const allPieces = [
            { name: "帥", color: "red" }, { name: "仕", color: "red" }, { name: "仕", color: "red" },
            { name: "相", color: "red" }, { name: "相", color: "red" }, { name: "俥", color: "red" },
            { name: "俥", color: "red" }, { name: "傌", color: "red" }, { name: "傌", color: "red" },
            { name: "炮", color: "red" }, { name: "炮", color: "red" }, { name: "兵", color: "red" },
            { name: "兵", color: "red" }, { name: "兵", color: "red" }, { name: "兵", color: "red" }, { name: "兵", color: "red" },
            { name: "將", color: "black" }, { name: "士", color: "black" }, { name: "士", color: "black" },
            { name: "象", color: "black" }, { name: "象", color: "black" }, { name: "車", color: "black" },
            { name: "車", color: "black" }, { name: "馬", color: "black" }, { name: "馬", color: "black" },
            { name: "包", color: "black" }, { name: "包", color: "black" }, { name: "卒", color: "black" },
            { name: "卒", color: "black" }, { name: "卒", color: "black" }, { name: "卒", color: "black" }, { name: "卒", color: "black" }
        ];

        function startDivination() {
            const initialAction = document.getElementById('initial-action');
            const againBtn = document.getElementById('againBtn');
            const board = document.getElementById('board');
            const hint = document.getElementById('result-hint');

            initialAction.style.display = "none";
            againBtn.disabled = true;
            againBtn.innerText = "靜心顯像中...";
            
            board.style.display = "block";
            board.innerHTML = "";
            board.classList.remove('show');

            let shuffled = [...allPieces].sort(() => 0.5 - Math.random());
            let selected = shuffled.slice(0, 5);

            selected.forEach((piece, index) => {
                const div = document.createElement('div');
                div.className = `chess-piece piece-${piece.color} pos-${index + 1}`;
                div.innerText = piece.name;
                board.appendChild(div);
            });

            setTimeout(() => {
                board.classList.add('show');
                hint.style.display = "block";
                againBtn.disabled = false;
                againBtn.style.display = "block";
                againBtn.innerText = "問第二卦";
                
                board.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }, 100);
        }
    </script>
